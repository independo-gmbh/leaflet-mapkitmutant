{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "target": "es5",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "inlineSources": true,
    "outDir": "./dist",
    "allowJs": true,
    "pretty": true,
    "sourceMap": true,
    "strict": false,
    "typeRoots": [
      "./node_modules/mapkit-typescript",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
